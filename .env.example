# Environment variables for watch scraping tool
# Copy this file to .env and fill in your actual API keys

# WooCommerce API Settings
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# Shopify API Settings
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_ACCESS_TOKEN=your_access_token_here
SHOPIFY_API_VERSION=2023-10

# Chrono24 API (if available)
CHRONO24_API_KEY=your_chrono24_key_here

# Google Shopping API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Database Settings (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=watch_scraping
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Scraping Settings
MAX_PRODUCTS_PER_SITE=100
DELAY_BETWEEN_REQUESTS=2
USE_PROXY=false
PROXY_URL=

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=notifications@your-company.com
